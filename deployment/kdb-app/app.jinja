{% import '../common/namespace.jinja' as ns with context %}

resources:
- name: kdb-app-deployment
  type: {{ ns.K8S_DEPLOYMENTS_TYPE }}
  properties:
    apiVersion: extensions/v1beta1
    kind: Deployment
    namespace: {{ ns.K8S_NAMESPACE }}
    metadata:
      name:  kdb-app
      labels:
        app: kdb-app
    spec:
      replicas: 1
      template:
        metadata:
          labels:
            name: kdb-app
          annotations:
            prometheus.io/scrape: "true"
        mycustom: annotation
        spec:
          nodeSelector:
            cloud.google.com/gke-nodepool: default-pool
          containers:
          - name: kdb-app
            image: gcr.io/{{ env['project'] }}/kdb-test/kdb-app
            ports:
            - name: http
              containerPort: 8081
            volumeMounts:
            - name: config-volume
              mountPath: /config
          volumes:
          - name: config-volume
            configMap:
              name: configmap-files
- name: kdb-app-service
  type: {{ ns.K8S_SERVICES_TYPE }}
  properties:
    apiVersion: v1
    kind: Service
    namespace: {{ ns.K8S_NAMESPACE }}
    metadata:
      name: kdb-app
    spec:
      type: LoadBalancer
      ports:
      - port: 8081
        targetPort: http
        protocol: TCP
      selector:
        name: kdb-app